{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AllowedHosts": "*",
    "Kestrel": {
        "Endpoints": {
            "Https": {
                "Url": "https://localhost:7068",
                "Certificate": {
                    "Path": "aspnetapp.pfx",
                    "Password": "yourpassword"
                }
            },
            "Http": {
                "Url": "http://localhost:5243"
            }
        },
        "Limits": {
            "MaxRequestBodySize": 104857600
        }
    },
    "Cors": {
        "PolicyName": "AllowAny",
        "AllowedOrigins": [ "*" ],
        "AllowedMethods": [ "GET", "POST", "PUT", "DELETE" ],
        "AllowedHeaders": [ "*" ]
    }
}
